{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and test",
            "type": "process",
            "command": "stack",
            "args": [
                "test"
            ],
            "group": "build",
            "problemMatcher": [
                {
                    "owner": "hie",
                    "fileLocation": [
                        "absolute"
                    ],
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s*$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                        },
                        {
                            "regexp": "^(.*)$",
                            "message": 1,
                        }
                    ]
                }
            ]
        }
    ]
}